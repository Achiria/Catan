package catan1.pkg1;

import java.awt.Point;

public class Actions
{
    private static int built;

    public void build(Point p) throws invalidLocationException
    {
        switch (built)
        {
            //road
            case 1:
                Test.playerTurn.buildRoad(getClosestCrease(p));
            //settlement
            case 2:
                Intersection inter = getClosestInter(p);
                Test.playerTurn.buildSettlement(inter.getX(), inter.getY(), new String());
            //city
            case 3:
                inter = getClosestInter(p);
                Test.playerTurn.buildCity(inter.getX(), inter.getY(), new String());
            default:
        }
    }

    public static void setBuild(int toSet)
    {
        built = toSet;
    }
    
    public void trade()
    {
        
    }
 
    public Crease getClosestCrease(Point p)
    {
        return null;
    }
    
    public Intersection getClosestInter(Point p)
    {
        return null;
    }
}

