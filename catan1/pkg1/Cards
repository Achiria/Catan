package catan1.pkg1;

/**
 *
 * @author Anthony Gamboa
 */
public class Cards
{
    public static void addCards()
    {
        final int WIDTH = 7;
        final int HEIGHT = 7;
        String[] corners =
        {
            "TR", "TL", "ML", "LL", "LR", "MR"
        };

        //  hay = 0
        //  sheep = 1
        //  wood = 2
        //  brick = 3
        //  ore = 4
        // desert = 5;
        for (int i = 0; i < WIDTH; i++)
        {
            for (int j = 0; j < HEIGHT; j++)
            {
                try
                {
                    for (String corner : corners)
                    {
                        if (Board.table[i][j].get(corner).getType() instanceof Building)
                        {
                            Building set = Board.table[i][j].get(corner).getType();
                            int toAdd;
                            if (set instanceof Settlement)
                            {
                                toAdd = 1;
                            }

                            else
                            {
                                toAdd = 2;
                            }
                            if (Board.table[i][j].getNumb() == Actions.getNumRolled())
                            {
                                set.getOwner().addHand(Board.table[i][j].getResource(), toAdd);
                            }
                            switch (corner)
                            {
                                case "TR":
                                    if (Board.table[i][j - 1].getNumb() == Actions.getNumRolled() && !Board.table[i][j - 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i][j - 1].getResource(), 2);
                                    }
                                    if (Board.table[i + 1][j].getNumb() == Actions.getNumRolled() && !Board.table[i + 1][j].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i + 1][j].getResource(), 2);
                                    }
                                case "TL":
                                    if (Board.table[i][j - 1].getNumb() == Actions.getNumRolled() && !Board.table[i][j - 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i][j - 1].getResource(), 2);
                                    }
                                    if (Board.table[i - 1][j].getNumb() == Actions.getNumRolled() && !Board.table[i - 1][j].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i - 1][j].getResource(), 2);
                                    }
                                case "ML":
                                    if (Board.table[i - 1][j].getNumb() == Actions.getNumRolled() && !Board.table[i - 1][j].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i - 1][j].getResource(), 2);
                                    }
                                    if (Board.table[i - 1][j + 1].getNumb() == Actions.getNumRolled() && !Board.table[i - 1][j + 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i - 1][j + 1].getResource(), 2);
                                    }
                                case "LL":
                                    if (Board.table[i - 1][j + 1].getNumb() == Actions.getNumRolled() && !Board.table[i - 1][j + 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i - 1][j + 1].getResource(), 2);
                                    }
                                    if (Board.table[i][j + 1].getNumb() == Actions.getNumRolled() && !Board.table[i][j + 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i][j + 1].getResource(), 2);
                                    }
                                case "LR":
                                    if (Board.table[i][j + 1].getNumb() == Actions.getNumRolled() && !Board.table[i][j + 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i][j + 1].getResource(), 2);
                                    }
                                    if (Board.table[i + 1][j + 1].getNumb() == Actions.getNumRolled() && !Board.table[i + 1][j + 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i + 1][j + 1].getResource(), 2);
                                    }
                                case "MR":
                                    if (Board.table[i + 1][j].getNumb() == Actions.getNumRolled() && !Board.table[i + 1][j].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i + 1][j].getResource(), 2);
                                    }
                                    if (Board.table[i + 1][j + 1].getNumb() == Actions.getNumRolled() && !Board.table[i + 1][j + 1].isShutdown())
                                    {
                                        set.getOwner().addHand(Board.table[i + 1][j + 1].getResource(), 2);
                                    }
                            }
                        }
                    }
                }
                catch (invalidLocationException ex)
                {
                    System.out.println("FAIL in settlementComponent");
                }
            }
        }
    }
}
