    private void buttSettActionPerformed(java.awt.event.ActionEvent evt)                                         
    {                                             
        try
        {
            String input = JOptionPane.showInputDialog(this, "Enter two ints and location as string:");
            input = input.trim();
            int xPoint = Integer.parseInt(input.substring(0, 1));
            int yPoint = Integer.parseInt(input.substring(2, 3));
            String inter = input.substring(4, input.length());
            Tile t = Board.table[xPoint][yPoint];
            Test.playerTurn.buildSettlement(t.getX(), t.getY(), inter);
        }

        catch (invalidLocationException ex)
        {
            System.out.println("You suck at layout");
        }

    }                                        

    private void buttRoadActionPerformed(java.awt.event.ActionEvent evt)                                         
    {                                             
        try
        {
            Scanner in = new Scanner(System.in);
            System.out.println("Enter 2 ints and location as string");
            int xPoint = in.nextInt();
            int yPoint = in.nextInt();
            String loc = in.next();
            Tile t = Board.table[xPoint][yPoint];
            Crease cre = t.getCrease(loc);
            Test.playerTurn.buildRoad(cre);
        }

        catch (invalidLocationException ex)
        {
            System.out.println("You suck at layout");
        }
    }                                        

    private void buttCityActionPerformed(java.awt.event.ActionEvent evt)                                         
    {                                             
        try
        {
            String input = JOptionPane.showInputDialog(this, "Enter two ints and location as string:");
            input = input.trim();
            int xPoint = Integer.parseInt(input.substring(0, 1));
            int yPoint = Integer.parseInt(input.substring(2, 3));
            String inter = input.substring(4, input.length());
            Tile t = Board.table[xPoint][yPoint];
            Test.playerTurn.buildCity(t.getX(), t.getY(), inter);
        }

        catch (invalidLocationException ex)
        {
            System.out.println("You suck at layout");
        }

    }                                        

